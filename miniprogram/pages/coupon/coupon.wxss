
/*my*/
.coupon-container {
    width: 225rpx;
    height: 225rpx;
    margin-top: 20rpx;
}

.coupon-image {
    width: 100%;
    height: 100%;
}

.coupon-details {
    display: flex;
    flex-direction: column;
    align-items: flex-end; /* 如果你想要右对齐 */

}

.title-strength-button-container {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.coupon-strength-left {
    color: grey; /* 灰色字体 */
    font-size: 28rpx; /* 小字体 */
    margin-right: 5rpx; /* 添加一点空间在两个文本元素之间 */
}

.coupon-strength-right {
    color: #ff003f; /* 橙色字体 */
    font-size: 40rpx; /* 大字体 */
}

.coupon-tag {
    margin-bottom: 10rpx;
    margin-top: 13rpx;
}

.coupon-strength {
    margin-bottom: 10rpx;
}

.tag-and-date {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}

.expire-date {
    color: #949090; /* 字体颜色 */
    font-size: 26rpx; /* 字体大小 */
    margin-right: 20rpx; /* 右边距 */
    margin-top: 0;
}

.strength-container {
    display: flex;
    justify-content: flex-end;
}
