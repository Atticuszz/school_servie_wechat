        <!--单元格-->
<van-grid style="margin-top: 80rpx;" center border square column-num="3" gutter="{{1}}" clickable="{{true}}"
          bind:tab="handleGridClick">
    <van-grid-item
            wx:for="{{gridItems}}"
            wx:key="index"
            icon="{{item.icon}}"
            text="{{item.text}}"
            url="{{item.url}}"
            link-type="{{item.linkType}}"
    />
</van-grid>
<van-cell-group>
    <van-cell clickable="{{true}}"
              is-link="{{true}}"
              title="发布"
              icon="smile-comment-o"/>
    <view style="height: 2px;"></view>

    <van-cell clickable="{{true}}"
              is-link="{{true}}"
              title="订单"
              icon="orders-o"
              bind:click="navigateToOrderTab"
    />
    <view style="height: 2px;"></view>

    <van-cell clickable="{{true}}"
              is-link="{{true}}"
              title="管理员"
              icon="manager-o"
              bind:click="show_key_input_dialog"
    />
    <!-- 弹窗 -->
    <!--    管理员验证-->
    <van-dialog show="{{ show_key_input_dialog }}"
                use-slot
                width="350px"
                showCancelButton="{{true}}"
                showConfirmButton="{{true}}"
                confirm-button-text="验证"
                bind:confirm="onConfirm_key_input"
                theme="round-button"
                title="管理员验证">
        <van-cell-group inset>
            <van-field

                    model:value="{{ key_input }}"
                    center
                    clearable
                    label="密钥"
                    placeholder="管理员入口"
                    border="{{ false }}"
                    use-button-slot
            />
        </van-cell-group>
    </van-dialog>
    <!--    管理员操作-->
    <van-dialog show="{{ show_manager_options_dialog }}"
                use-slot
                width="350px"
                showCancelButton="{{true}}"
                showConfirmButton="{{false}}"
                confirm-button-text="验证"
                theme="round-button"
                title="管理员操作">
        <van-cell-group inset>
            <van-cell clickable
                      bindtap="do_options"
                      wx:for="{{do_options}}"
                      wx:key="index"
                      title="{{item}}"
                      data-option="{{item}}"
            >

                <!-- 右侧内容 -->
                <view slot="right-icon">
                    <van-icon name="certificate" size="25px" style="margin-top:20rpx"/>
                </view>
            </van-cell>
        </van-cell-group>
    </van-dialog>
    <!--  分割线   -->
    <view style="height: 2px;"></view>

    <van-cell title="客服"
              value="微信号：ywb_123456"
              icon="service-o"/>

    <!--  分割线   -->
    <view style="height: 2px;"></view>

    <van-cell clickable="{{true}}"
              is-link="{{true}}"
              value="反馈bug大大滴有赏"
              title="反馈" icon="bulb-o"/>
    <!--  分割线   -->
    <view style="height: 2px;"></view>
    <!--    邀请码-->
    <van-cell clickable="{{true}}"
              is-link="{{true}}"
              title="邀请码"
              value="券券无极限"
              icon="friends-o"/>
    <!--  分割线   -->
    <view style="height: 2px;"></view>
    <van-cell title="关于"
              value="版本号：1.0.0"
              icon="info-o"/>

</van-cell-group>


        <!--底部-->
<van-divider>底部</van-divider>



