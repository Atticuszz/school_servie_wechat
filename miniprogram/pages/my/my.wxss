/* pages/my/my.wxss */
page{
  width: 100%;
}
.tou_img{
  height: 350rpx;
  position: absolute;
  z-index: -1;
  width: 100%;
}
.touxiang{
  width: 70%;
  height: 200rpx;
  z-index: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  margin-top: 80rpx;
  margin-left: 15%;
  border-radius: 20rpx;
  overflow: hidden;
  
}
.tou_ren{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color:  rgba(240, 240, 240, 0.75);  /* 背景色 */
  padding: 10px;  /* 内边距 */
  border-radius: 5px;  /* 圆角 */
  width: 40%;
  height: 30%;
}

.img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

